---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Sacred Heart Knolta">
  <main>
    <div class="hero">
      <h2>Sacred Heart Catholic Church, Knolta</h2>
      <p>At your Service...</p>
      <h3>Lord!</h3>
    </div>
  </main>
</Layout>

<style>
  .hero {
    background-image: linear-gradient(
        to right bottom,
        rgba(16, 29, 44, 0.9),
        rgba(16, 29, 44, 0.9)
      ),
      url(/images/members.jpg);
    background-size: cover;
    height: calc(100vh - 8rem);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  .hero h2 {
    font-size: 3.5rem;
    margin-top: -15rem;
    font-family: 'Noto Sans Mono', monospace;
    font-weight: 600;
    background-image: linear-gradient(to right, #b28451, #6d5d4b);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    margin-bottom: 5rem;
  }

  .hero p {
    font-size: 2rem;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .hero h3 {
    color: var(--color-primary-dark);
    font-size: 3rem;
    margin-top: 1.5rem;
  }
</style>
